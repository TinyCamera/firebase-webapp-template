{
  "private": true,
  "name": "firebase-webapp-template",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "watch": "tsc -b tsconfig.build.json --watch",
    "clean:build": "find packages/*/src -type f \\( -name \"*.js\" -o -name \"*.d.ts\" -o -name \"*.map\" \\) -delete"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
