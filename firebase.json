{
  "functions": [
    {
      "source": "packages/server",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "src/**"
      ],
      "predeploy": ["npm run lint", "npm run build"]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8081
    },
    "auth": {
      "port": 9098
    },
    "ui": {
      "enabled": true,
      "port": 4040
    },
    "hub": {
      "port": 4440
    }
  }
}
