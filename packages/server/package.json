{
  "name": "@firebase-webapp-template/server",
  "version": "1.0.0",
  "description": "Firebase Functions backend",
  "main": "lib/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions,firestore,auth",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --detectOpenHandles"
  },
  "dependencies": {
    "@firebase-webapp-template/shared": "1.0.0",
    "@types/express": "^5.0.0",
    "@types/node-fetch": "^2.6.12",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "firebase-admin": "^13.0.2",
    "firebase-functions": "^6.3.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.25.4",
    "firebase-tools": "^13.29.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.3.3"
  }
}
